<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F4DFF8"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.IlanPaylasDetayFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layoutaltbar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- genel bilgiler -->
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="3dp"
                card_view:cardElevation="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:id="@+id/ilanDetayGuncelleBaslikEkleImage"
                        android:src="@drawable/ic_baseline_add_task_24"
                        android:layout_gravity="right"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_gravity="center"
                        android:text="ilan detay baslik"
                        android:id="@+id/ilanDetayGuncelleIlanBaslik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#872298"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="-30dp"
                        android:layout_marginLeft="25dp">
                    </com.google.android.material.textfield.TextInputEditText>

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_gravity="center"
                        android:text="ilan detay aciklama"
                        android:id="@+id/ilanDetayGuncelleIlanAciklama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#872298"
                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="25dp">
                    </com.google.android.material.textfield.TextInputEditText>
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_gravity="center"
                        android:text="İlan Adres"
                        android:id="@+id/ilanDetayGuncelleAdres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#872298"
                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="25dp">
                    </com.google.android.material.textfield.TextInputEditText>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- iş tanımı -->
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="3dp"
                card_view:cardElevation="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:weightSum="5"
                        android:orientation="horizontal">

                        <TextView
                            android:text="Job Description"
                            android:layout_width="0dp"
                            android:layout_weight="4.7"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#872298"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="25dp">
                        </TextView>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:id="@+id/ilanDetayGuncelleIsTanimiEkleImage"
                            android:src="@drawable/ic_baseline_add_task_24"
                            android:layout_gravity="center"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"/>

                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputEditText
                        android:hint="Enter job description .."
                        android:paddingLeft="15dp"
                        android:id="@+id/ilanDetayGuncelleIsTanimiEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#872298"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="25dp">
                    </com.google.android.material.textfield.TextInputEditText>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- genel nitelikler -->
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="3dp"
                card_view:cardElevation="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:weightSum="5"
                        android:orientation="horizontal">



                        <TextView
                            android:text="General Qualifications"
                            android:layout_width="0dp"
                            android:layout_weight="4.7"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#872298"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="25dp">
                        </TextView>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:id="@+id/ilanDetayGuncelleNitelikEkleImage"
                            android:src="@drawable/ic_baseline_add_task_24"
                            android:layout_gravity="center"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputEditText
                        android:hint="Enter attributes .."
                        android:paddingLeft="15dp"
                        android:id="@+id/ilanDetayGuncelleNitelikEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#872298"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="25dp">
                    </com.google.android.material.textfield.TextInputEditText>


                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/ilanDetayGuncelleNitelikRecyclerView"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- pozisyon bilgiler -->
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="3dp"
                card_view:cardElevation="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:weightSum="5"
                        android:orientation="horizontal">


                        <TextView
                            android:text="Position Information"
                            android:layout_width="0dp"
                            android:layout_weight="4.7"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#872298"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="25dp">
                        </TextView>

                        <ImageView
                            android:layout_width="0dp"
                            android:id="@+id/ilanDetayGuncellePozisyonEkleImage"
                            android:layout_weight="0.5"
                            android:src="@drawable/ic_baseline_add_task_24"
                            android:layout_gravity="center"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"/>

                    </LinearLayout>
                    <TextView
                        android:text="* Company Sector"
                        android:paddingLeft="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#872298"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="25dp">
                    </TextView>
                    <com.google.android.material.textfield.TextInputEditText
                        android:hint="Enter company sector .."
                        android:paddingLeft="15dp"
                        android:id="@+id/ilanDetayGuncelleFirmaSektoruEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#872298"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="25dp">
                    </com.google.android.material.textfield.TextInputEditText>

                    <TextView
                        android:text="* Mode of Operation"
                        android:paddingLeft="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#872298"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="25dp">
                    </TextView>
                    <com.google.android.material.textfield.TextInputEditText
                        android:hint="Enter the way it works .."
                        android:paddingLeft="15dp"
                        android:id="@+id/ilanDetayGuncelleCalismaSekliEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#872298"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="25dp">
                    </com.google.android.material.textfield.TextInputEditText>

                    <TextView
                        android:text="* Department"
                        android:paddingLeft="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#872298"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="25dp">
                    </TextView>
                    <com.google.android.material.textfield.TextInputEditText
                        android:hint="Enter the department .."
                        android:paddingLeft="15dp"
                        android:id="@+id/ilanDetayGuncelleDepartmanEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#872298"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="25dp">
                    </com.google.android.material.textfield.TextInputEditText>


                    <TextView
                        android:text="* Position Level"
                        android:paddingLeft="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#872298"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="25dp">
                    </TextView>
                    <com.google.android.material.textfield.TextInputEditText
                        android:hint="Enter the position level .."
                        android:paddingLeft="15dp"
                        android:id="@+id/ilanDetayGuncellePozisyonSeviyeEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#872298"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="25dp">
                    </com.google.android.material.textfield.TextInputEditText>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- aday kriterleri -->
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="3dp"
                card_view:cardElevation="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:weightSum="5"
                        android:orientation="horizontal">

                        <TextView
                            android:text="Candidate Criteria"
                            android:layout_width="0dp"
                            android:layout_weight="4.7"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#872298"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="25dp">
                        </TextView>

                        <ImageView
                            android:layout_width="0dp"
                            android:id="@+id/ilanDetayGuncelleKriterEkleImage"
                            android:layout_weight="0.5"
                            android:src="@drawable/ic_baseline_add_task_24"
                            android:layout_gravity="center"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"/>

                    </LinearLayout>
                    <TextView
                        android:text="* Experience"
                        android:paddingLeft="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#872298"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="25dp">
                    </TextView>
                    <com.google.android.material.textfield.TextInputEditText
                        android:hint="Enter experience .."
                        android:paddingLeft="15dp"
                        android:id="@+id/ilanDetayGuncelleTecrubeEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#872298"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="25dp">
                    </com.google.android.material.textfield.TextInputEditText>

                    <TextView
                        android:text="* Education Level"
                        android:paddingLeft="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#872298"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="25dp">
                    </TextView>
                    <com.google.android.material.textfield.TextInputEditText
                        android:hint="Enter education level .."
                        android:paddingLeft="15dp"
                        android:id="@+id/ilanDetayGuncelleEgitimSeviyesiEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#872298"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="25dp">
                    </com.google.android.material.textfield.TextInputEditText>



                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layoutaltbar"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="@drawable/ounded_shape8"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_height="?actionBarSize">

        <Button
            android:id="@+id/ilanDetayGuncelle"
            android:layout_width="0dp"
            android:textSize="17sp"
            android:layout_weight="4"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_transparent"
            android:text="PUBLISH" />

    </LinearLayout>



</RelativeLayout>

