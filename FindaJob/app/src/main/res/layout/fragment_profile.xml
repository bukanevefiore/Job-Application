        android:textColor="#872298"
        android:layout_marginLeft="25dp"></TextView>


 </LinearLayout>

        </LinearLayout>
</LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
