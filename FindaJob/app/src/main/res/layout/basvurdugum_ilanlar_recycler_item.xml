<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/basvurdugumIlanlarAnaLayout"
    android:clickable="true"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="0.5dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#F7EBFA"
        android:layout_width="match_parent"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        android:elevation="20dp"
        app:cardMaxElevation="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/basvurdugumIlanBaslikText"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#581A63"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baslık"/>

            <TextView
                android:id="@+id/basvurdugumIlanAciklamaText"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:textColor="#805B87"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baslık"/>

            <TextView
                android:id="@+id/basvurdugumIlanMailText"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:textColor="#805B87"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baslık"/>

            <TextView
                android:id="@+id/onayRedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="OnayRed"
                android:layout_marginRight="10dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>